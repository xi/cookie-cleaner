{
  "manifest_version": 2,

  "name": "Cookie Cleaner",
  "description": "clear cookies with no UI at all",
  "version": "1.0",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "background": {
    "scripts": [
      "index.js"
    ]
  },

  "permissions": [
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ]
}
